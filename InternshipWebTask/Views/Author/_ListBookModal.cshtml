@model List<InternshipWebTask.Models.Book>

<div class="modal fade" id="listBookModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookListModalLabel">Очередь книг на добавление</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group">
                        @foreach (var book in Model)
                        {
                            <li class="list-group-item">
                                <h5 class="mb-1">Название книги: @book.BookName</h5>
                                <p class="mb-1">Жанр: @book.Genre</p>
                                <p class="mb-1">Кол-во страниц: @book.PageQty</p>
                                <a class="delete-bookQ" data-book-id="@book.Id" asp-controller="Book" asp-action="Delete">Удалить книгу из очереди</a>
                            </li>
                        }
                    </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>