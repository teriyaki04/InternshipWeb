@model InternshipWebTask.ViewModels.AuthorAddViewModel

@{
    ViewData["Title"] = "Update Author";
}

<body>
<form method="post" asp-controller="Author" asp-action="Update">
    <div asp-validation-summary="ModelOnly"></div>
    <hr />
    <div class="form-floating">
        <input asp-for="LastName" value="@Model.LastName" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="FirstName" value="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Patronymic" value="@Model?.Patronymic" class="form-control" autocomplete="username" aria-required="true"/>
        <label asp-for="Patronymic"></label>
        <span asp-validation-for="Patronymic" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="DateOfBirth" value="@Model.DateOfBirth" class="form-control" autocomplete="username" aria-required="true"/>
        <label asp-for="DateOfBirth"></label>
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" class="w-100 btn btn-lg btn-primary" value="Обновить"/>
    </div>
</form>
</body>
